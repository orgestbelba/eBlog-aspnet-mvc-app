@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<style>
    /* Additional custom styles */
    .login-container {
        background: #f4f4f4;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .signup-container {
        background: #e9e9e9; /* Neutral background color */
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="login-container">
                <div class="card-header bg-primary text-white">
                    <h4>Login</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Login" method="post">
                        <div class="form-group">
                            <label for "email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Login</button>
                    </form>
                    <button id="showSignup" class="btn btn-success btn-block mt-3">Sign Up</button>
                </div>
            </div>
        </div>

        <!-- Signup Form (Initially Hidden) -->
        <div class="col-md-6" id="signupContainer" style="display: none;">
            <div class="signup-container">
                <div class="card-header">
                    <h4>Sign Up</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="Register" method="post">
                        <div class="form-group">
                            <label for="email">Email:</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Password:</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        <div class="form-group">
                            <label for="confirmPassword">Confirm Password:</label>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                        <button type="submit" class="btn btn-success btn-block">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle the visibility of the sign-up form
        $("#showSignup").click(function () {
            $("#signupContainer").toggle();
        });
    </script>
    </section>
    }